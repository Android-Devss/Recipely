<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Recipely" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/white_ff</item>
        <item name="colorOnPrimary">@color/primary</item>
        <item name="colorSecondaryContainer">@color/primary50</item>
    </style>

    <style name="Theme.Recipely" parent="Base.Theme.Recipely" />

    <style name="CardImageStyle">
        <item name="cornerSize">16dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ColorFragmentBackground">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="adviceTextInstruction">
        <item name="android:textColor">@color/white_ff</item>
        <item name="android:textSize">@dimen/text14</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="backgroundItemCardAdvice">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="adviceTextStyle">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/text16</item>
    </style>

    <style name="img_card">
        <item name="cornerSize">@dimen/space16</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="TextViewStyle">
        <item name="android:layout_marginStart">@dimen/space16</item>
        <item name="android:layout_marginTop">@dimen/space8</item>
        <item name="android:layout_marginBottom">@dimen/space8</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textColor">@color/black87</item>
        <item name="android:textSize">@dimen/text16</item>
    </style>
    <style name="circle">
        <item name="cornerSize">24dp</item>
    </style>
</resources>