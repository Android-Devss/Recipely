<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Recipely" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/white_ff</item>
        <item name="colorOnPrimary">@color/primary</item>
        <item name="colorSecondaryContainer">@color/primary50</item>
    </style>

    <style name="Theme.Recipely" parent="Base.Theme.Recipely" />

    <style name="Chip_Style" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="textFillColor">@color/black87</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text16</item>
        <item name="android:layout_width">@dimen/space_zero</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/space8</item>
    </style>

    <style name="subCards">
        <item name="android:layout_marginHorizontal">@dimen/space16</item>
        <item name="cardCornerRadius">@dimen/space24</item>
    </style>

    <style name="firstSubCardViewText">
        <item name="android:layout_marginStart">@dimen/space16</item>
        <item name="android:layout_marginTop">@dimen/space8</item>
        <item name="android:layout_marginBottom">@dimen/space12</item>
        <item name="android:drawablePadding">@dimen/space4</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/text14</item>
        <item name="android:textColor">@color/black87</item>
    </style>

    <style name="secondSubCardViewHeader">
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">@dimen/text16</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="secondSubCardViewContent">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/text14</item>
        <item name="android:textColor">@color/black87</item>
    </style>

    <style name="recyclerViewItemsRecipeNames">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/black87</item>
    </style>

    <style name="recyclerViewItemsRecipeCuisine">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/black60</item>
    </style>

    <style name="headersLinearLayout">
        <item name="android:layout_marginHorizontal">@dimen/space16</item>
        <item name="background">@color/white_fa</item>
    </style>

    <style name="headersText">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/text20</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="viewAllText">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/text14</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="recyclerViewLayouts">
        <item name="background">@color/white_fa</item>
        <item name="android:padding">@dimen/space16</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="whiteTextShadow">
        <item name="android:shadowColor">@color/black87</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
    </style>
</resources>