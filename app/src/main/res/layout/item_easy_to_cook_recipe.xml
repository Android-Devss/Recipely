<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:backgroundTint="@color/white_ec"
    android:layout_marginBottom="@dimen/space8"
    app:cardCornerRadius="@dimen/space16"
    app:strokeWidth="@dimen/space_zero">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/card_background"
        android:orientation="horizontal"
        android:padding="@dimen/space8">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/vertical_recipe_image"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@color/white_fa"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:round="@dimen/space16"
            tools:src="@drawable/food_image" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/space12">

            <TextView
                android:id="@+id/vertical_recipe_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_medium"
                android:maxLines="2"
                android:textColor="@color/black87"
                android:textSize="@dimen/text18"
                app:layout_constraintEnd_toStartOf="@+id/vertical_ic_arrow_right"
                app:layout_constraintStart_toEndOf="@+id/vertical_recipe_image"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Chicken Curry Curry Recipe Curry Recipe" />

            <TextView
                android:id="@+id/vertical_recipe_cuisine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space16"
                android:drawablePadding="@dimen/space8"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_regular"
                android:lines="1"
                android:textColor="@color/black60"
                android:textSize="@dimen/text16"
                app:drawableStartCompat="@drawable/icon_spoon"
                tools:text="Egypt Cuisine"
                app:drawableTint="@color/black60" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>