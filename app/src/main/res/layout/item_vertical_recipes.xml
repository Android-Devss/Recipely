<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="@dimen/space16"
    android:backgroundTint="@color/white_ec"
    android:layout_marginHorizontal="@dimen/space16"
    app:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/vertical_recipe_image"
            android:layout_width="120dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/space8"
            android:background="@color/white_fa"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:round="@dimen/space16"
            tools:src="@drawable/food_image" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/vertical_ic_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_arrow_right" />

        <TextView
            android:id="@+id/vertical_recipe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space16"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black87"
            android:textSize="@dimen/text16"
            tools:text="Chicken Curry Recipe"
            app:layout_constraintEnd_toStartOf="@+id/vertical_ic_arrow_right"
            app:layout_constraintStart_toEndOf="@+id/vertical_recipe_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/vertical_recipe_cuisine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space16"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_medium"
            android:lines="1"
            android:text="Egypt"
            android:textColor="@color/black37"
            android:textSize="@dimen/text18"
            android:drawablePadding="@dimen/space8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/vertical_recipe_name"
            app:drawableStartCompat="@drawable/icon_spoon" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>