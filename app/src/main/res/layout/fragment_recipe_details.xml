<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_constrain_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_e1">

    <androidx.cardview.widget.CardView
        android:id="@+id/main_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/space16"
        android:layout_marginVertical="@dimen/space24"
        app:cardCornerRadius="@dimen/space24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/base_constraint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_fa">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/recipe_details_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/base_constraint"
                app:srcCompat="@drawable/food_image" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ic_keyboard_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space16"
                android:layout_marginTop="@dimen/space32"
                android:background="@drawable/arrow_back_to_home"
                app:layout_constraintStart_toStartOf="@id/recipe_details_image"
                app:layout_constraintTop_toTopOf="@id/recipe_details_image"
                app:srcCompat="@drawable/icon_keyboard_arrow" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/recipe_details_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space32"
                android:fontFamily="@font/poppins_semi_bold"
                android:gravity="center"
                android:text="@string/recipe_details"
                android:textColor="@color/white_ff"
                android:textSize="@dimen/text18"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.402"
                app:layout_constraintStart_toEndOf="@+id/ic_keyboard_arrow"
                app:layout_constraintTop_toTopOf="@id/recipe_details_image" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/first_sub_card_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginHorizontal="@dimen/space24"
        android:layout_marginTop="220dp"
        app:cardCornerRadius="@dimen/space24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/first_sub_constraint"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/recipe_details_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space24"
                android:layout_marginTop="@dimen/space16"
                android:drawableStart="@drawable/icon_cooking_food"
                android:drawablePadding="@dimen/space8"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="Black Bean Burrito"
                android:textColor="@color/black87"
                android:textSize="@dimen/text14"
                app:layout_constraintStart_toStartOf="@id/first_sub_constraint"
                app:layout_constraintTop_toTopOf="@id/first_sub_constraint" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/recipe_details_cuisine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space24"
                android:layout_marginTop="@dimen/space12"
                android:drawableStart="@drawable/icon_verified"
                android:drawablePadding="@dimen/space4"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="Spinach"
                android:textColor="@color/black87"
                android:textSize="@dimen/text14"
                app:layout_constraintStart_toStartOf="@id/first_sub_constraint"
                app:layout_constraintTop_toBottomOf="@id/recipe_details_name" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/recipe_details_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space24"
                android:layout_marginTop="@dimen/space12"
                android:drawableStart="@drawable/icon_time"
                android:drawablePadding="@dimen/space4"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="15 Mins"
                android:textColor="@color/black87"
                android:textSize="@dimen/text14"
                app:layout_constraintStart_toEndOf="@id/recipe_details_cuisine"
                app:layout_constraintTop_toBottomOf="@id/recipe_details_name" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/second_sub_card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_zero"
        android:layout_marginHorizontal="@dimen/space24"
        android:layout_marginTop="@dimen/space32"
        android:layout_marginBottom="@dimen/space8"
        app:cardCornerRadius="@dimen/space24"
        app:layout_constraintBottom_toBottomOf="@+id/main_card_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/first_sub_card_view">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/second_sub_constraint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/second_sub_cardview_border">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/ic_ingredients_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/space16"
                android:layout_marginStart="@dimen/space32"
                android:drawableStart="@drawable/icon_ingredients"
                android:drawablePadding="@dimen/space8"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="@string/ingredients"
                android:textColor="@color/black87"
                android:textSize="@dimen/text18"
                app:layout_constraintStart_toStartOf="@id/second_sub_constraint"
                app:layout_constraintTop_toTopOf="@id/second_sub_constraint" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space2"
                android:layout_marginTop="@dimen/space16"
                android:background="@color/white_e1"
                app:layout_constraintEnd_toEndOf="@id/second_sub_constraint"
                app:layout_constraintStart_toStartOf="@id/second_sub_constraint"
                app:layout_constraintTop_toBottomOf="@id/ic_ingredients_text" />

            <ScrollView
                android:id="@+id/ic_ingredients_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_zero"
                android:padding="@dimen/space16"
                android:scrollbars="none"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space8"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/recipe_details_ingredients_count_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:text="@string/ingredients_count"
                            android:textColor="@color/secondary"
                            android:textSize="@dimen/text16" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/recipe_details_ingredients_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="10 Items"
                            android:textColor="@color/black87"
                            android:textSize="@dimen/text14" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space8"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/recipe_details_ingredients_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:text="@string/recipe_ingredients"
                            android:textColor="@color/secondary"
                            android:textSize="@dimen/text16" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/recipe_details_ingredients"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/black87"
                            android:textSize="@dimen/text14"
                            tools:text="3 tablespoon Gram flour (besan);2 teaspoons Cumin seeds (Jeera);1 tablespoon Coriander Powder (Dhania);2 teaspoons Turmeric powder (Haldi);Salt - to taste;1 tablespoon Amchur (Dry Mango Powder);6 Karela (Bitter Gourd/ Pavakkai) - deseeded;Sunflower Oil - as required;1 Onion - thinly sliced" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space8"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/recipe_details_Instructions_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:text="@string/instructions"
                            android:textColor="@color/secondary"
                            android:textSize="@dimen/text16" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/recipe_details_Instructions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="To begin making the Masala Karela Recipe;de-seed the karela and slice.Do not remove the skin as the skin has all the nutrients.Add the karela to the pressure cooker with 3 tablespoon of water; salt and turmeric powder and pressure cook for three whistles.Release the pressure immediately and open the lids.Keep aside.Heat oil in a heavy bottomed pan or a kadhai.Add cumin seeds and let it sizzle.Once the cumin seeds have sizzled; add onions and saute them till it turns golden brown in color.Add the karela; red chilli powder; amchur powder; coriander powder and besan.Stir to combine the masalas into the karela.Drizzle a little extra oil on the top and mix again.Cover the pan and simmer Masala Karela stirring occasionally until everything comes together well.Turn off the heat.Transfer Masala Karela into a serving bowl and serve.Serve Masala Karela along with Panchmel Dal and Phulka for a weekday meal with your family"
                            android:textColor="@color/black87"
                            android:textSize="@dimen/text14" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space8"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/recipe_details_health_ingredients_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:text="@string/healthy_ingredients"
                            android:textColor="@color/secondary"
                            android:textSize="@dimen/text16" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/recipe_details_health_ingredients"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="salt;amchur (dry mango powder);karela (bitter gourd pavakkai);red chilli powder;gram flour (besan);onion;cumin seeds (jeera);coriander powder;turmeric powder;sunflower oil"
                            android:textColor="@color/black87"
                            android:textSize="@dimen/text14" />
                    </LinearLayout>


                </LinearLayout>


            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>