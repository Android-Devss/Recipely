<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white_ff"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/space4"
    android:padding="@dimen/space4"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/title"
            android:layout_width="@dimen/space_zero"
            android:layout_height="wrap_content"
            android:text="@string/popular"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginStart="@dimen/space12"
            android:textColor="@color/black60"
            android:textSize="@dimen/text18"
            android:textStyle="bold"
            tools:ignore="InefficientWeight" />

        <TextView
            android:id="@+id/see_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/see_all"
            android:textColor="@color/primary"
            android:textSize="@dimen/text18"
            tools:ignore="TextContrastCheck" />

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_child"
            android:padding="@dimen/space4"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_home_popular_card"
            android:background="@color/white_ff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>
