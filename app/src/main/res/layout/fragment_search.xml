<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/ColorFragmentBackground"
    android:fitsSystemWindows="true"
    android:windowSoftInputMode="adjustPan">

    <SearchView
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space16"
        android:background="@drawable/background_search_strok"
        android:iconifiedByDefault="false"
        android:imeOptions="flagNoFullscreen"
        android:queryBackground="@null"
        android:queryHint="@string/search"
        android:searchIcon="@drawable/ic_search"
        android:theme="@style/ThemeOverlay.Material3.Search"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/imgSearchAnimi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space24"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/data"></com.airbnb.lottie.LottieAnimationView>


    <TextView
        android:id="@+id/tv_discover"
        style="@style/textDiscover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/discover_recipes"
        app:layout_constraintEnd_toEndOf="@id/imgSearchAnimi"
        app:layout_constraintStart_toStartOf="@id/imgSearchAnimi"
        app:layout_constraintTop_toBottomOf="@+id/imgSearchAnimi" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:theme="@style/InfoTextStyle"
        android:text="@string/search_about_recipes"
        app:layout_constraintEnd_toEndOf="@+id/tv_discover"
        app:layout_constraintStart_toStartOf="@+id/tv_discover"
        app:layout_constraintTop_toBottomOf="@+id/tv_discover" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewSearchList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/space4"
        android:clipToPadding="false"
        android:padding="@dimen/space12"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search"
        app:spanCount="2"
        tools:itemCount="15"
        tools:listitem="@layout/item_search_card" />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/imgSearchNotFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space24"
        android:background="@android:color/transparent"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/error"></com.airbnb.lottie.LottieAnimationView>

</androidx.constraintlayout.widget.ConstraintLayout>
