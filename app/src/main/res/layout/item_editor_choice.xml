<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_fa">

    <LinearLayout
        android:id="@+id/editor_choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/editor_choice_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.6"
            android:layout_margin="@dimen/space8"
            android:gravity="center_vertical"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="@string/editor_s_choice"
            android:textColor="@color/secondary"
            android:textSize="@dimen/text24"
            tools:ignore="InefficientWeight" />


        <TextView
            android:id="@+id/editor_choice_view_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:layout_margin="@dimen/space8"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="@string/view_all"
            android:textSize="@dimen/space16"
            android:textColor="@color/primary"
            tools:drawableEndCompat="@drawable/icon_forward" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>