<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_margin="@dimen/space4"
    app:cardCornerRadius="@dimen/space12"
    app:strokeWidth="0dp"
    android:backgroundTint="@color/white_ff">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_recipe_image"
        style="@style/img_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/indian_food" />

    <View
        android:id="@+id/view_gradiant"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_img_card"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_recipe_name"
            style="@style/CategoryTextName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:layout_marginStart="@dimen/space8"
            android:layout_marginEnd="@dimen/space8"
            android:layout_marginBottom="0dp"
            android:text="@string/MasalaKarelaRecipe" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_recipe_cuisine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:layout_marginHorizontal="@dimen/space8"
            android:layout_marginBottom="@dimen/space8"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_medium"
            android:maxLines="1"
            android:text="@string/indianFood"
            android:textColor="@color/white_ec"
            android:textSize="@dimen/text12" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>