<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:id="@+id/scroll_chip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_margin="@dimen/space16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.chip.ChipGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/space4">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_breakfast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text16"
                android:fontFamily="@font/poppins_semi_bold"
                android:textColor="@color/black60"
                android:background="@drawable/chips_background"
                android:text="Breakfast" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_lunch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text16"
                android:fontFamily="@font/poppins_semi_bold"
                android:textColor="@color/black60"
                android:background="@drawable/chips_background"
                android:text="Lunch" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_dinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text16"
                android:fontFamily="@font/poppins_semi_bold"
                android:textColor="@color/black60"
                android:background="@drawable/chips_background"
                android:text="Dinner" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_dessert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text16"
                android:fontFamily="@font/poppins_semi_bold"
                android:textColor="@color/black60"
                android:background="@drawable/chips_background"
                android:text="Dessert" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_fruits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text16"
                android:fontFamily="@font/poppins_semi_bold"
                android:textColor="@color/black60"
                android:background="@drawable/chips_background"
                android:text="Fruits" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_snacks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text16"
                android:fontFamily="@font/poppins_semi_bold"
                android:textColor="@color/black60"
                android:background="@drawable/chips_background"
                android:text="Snacks" />
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/space16"
        android:background="@color/white_fa"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scroll_chip" />

</androidx.constraintlayout.widget.ConstraintLayout>